{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": []
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/test-setup.ts",
    "jest.config.ts",
    "src/**/*.test.ts",
    "cypress/**/*",
    "cypress.config.ts",
    "**/*.cy.ts",
    "**/*.cy.js",
    "**/*.cy.tsx",
    "**/*.cy.jsx"
  ],
  "include": [
    "src/**/*.ts",
    "accordion/**/*.ts",
    "directive/**/*.ts",
    "http/**/*.ts",
    "http/pagination/**/*.ts",
    "http/table/**/*.ts",
    "pagination/directives/**/*.ts",
    "pagination/**/*.ts",
    "table/directives/**/*.ts",
    "table/**/*.ts",
    "table/tree/**/*.ts",
    "testing/**/*.ts"
  ]
}
