{
  "name": "angular-user",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/angular/user/src",
  "prefix": "rxap",
  "tags": [
    "angular",
    "ngx",
    "packages",
    "scope:compose"
  ],
  "projectType": "library",
  "targets": {
    "index-export": {},
    "copy-open-api-sdk": {
      "inputs": [
        "{workspaceRoot}/packages/open-api/service/user/src/lib"
      ],
      "options": {
        "commands": [
          "rm -rf ./packages/angular/user/src/lib/openapi || true",
          "mkdir -p ./packages/angular/user/src/lib/openapi",
          "cp -r ./packages/open-api/service/user/src/lib/components ./packages/angular/user/src/lib/openapi",
          "cp -r ./packages/open-api/service/user/src/lib/parameters ./packages/angular/user/src/lib/openapi",
          "cp -r ./packages/open-api/service/user/src/lib/remote-methods ./packages/angular/user/src/lib/openapi",
          "cp -r ./packages/open-api/service/user/src/lib/request-bodies ./packages/angular/user/src/lib/openapi",
          "cp -r ./packages/open-api/service/user/src/lib/responses ./packages/angular/user/src/lib/openapi"
        ]
      }
    },
    "build": {
      "dependsOn": [
        "copy-open-api-sdk"
      ],
      "executor": "@nx/angular:package",
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}"
      ],
      "options": {
        "project": "packages/angular/user/ng-package.json",
        "tailwindConfig": "packages/angular/user/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/angular/user/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/angular/user/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/angular/user/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/angular/user/**/*.ts",
          "packages/angular/user/**/*.html"
        ]
      }
    },
    "update-dependencies": {
      "executor": "@rxap/plugin-library:update-dependencies"
    },
    "update-package-group": {
      "executor": "@rxap/plugin-library:update-package-group"
    },
    "readme": {
      "executor": "@rxap/plugin-library:readme"
    },
    "fix-dependencies": {
      "executor": "@rxap/plugin-library:run-generator",
      "outputs": [
        "{workspaceRoot}/{projectRoot}/package.json"
      ],
      "options": {
        "generator": "@rxap/plugin-library:fix-dependencies",
        "options": {
          "strict": true
        }
      }
    },
    "check-version": {
      "executor": "@rxap/plugin-library:check-version",
      "options": {
        "packageName": "@angular/core"
      }
    },
    "build-tailwind": {
      "executor": "@rxap/plugin-angular:tailwind",
      "configurations": {
        "production": {
          "minify": true
        },
        "development": {}
      }
    },
    "check-ng-package": {
      "executor": "@rxap/plugin-angular:check-ng-package"
    }
  }
}
