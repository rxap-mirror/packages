{
  "name": "angular-material-form-system",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/angular/material/form-system/src",
  "prefix": "rxap",
  "tags": [
    "angular",
    "ngx",
    "packages",
    "material",
    "form-system"
  ],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}"
      ],
      "options": {
        "project": "packages/angular/material/form-system/ng-package.json",
        "tailwindConfig": "packages/angular/material/form-system/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/angular/material/form-system/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/angular/material/form-system/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/angular/material/form-system/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/angular/material/form-system/**/*.ts",
          "packages/angular/material/form-system/**/*.html"
        ]
      }
    },
    "update-dependencies": {
      "executor": "@rxap/plugin-library:update-dependencies"
    },
    "update-package-group": {
      "executor": "@rxap/plugin-library:update-package-group"
    },
    "readme": {
      "executor": "@rxap/plugin-library:readme"
    },
    "component-test": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "packages/angular/material/form-system/cypress.config.ts",
        "testingType": "component",
        "skipServe": true,
        "devServerTarget": "angular:build:development"
      },
      "configurations": {
        "open": {
          "watch": true
        }
      }
    },
    "fix-dependencies": {
      "executor": "@rxap/plugin-library:run-generator",
      "outputs": [
        "{workspaceRoot}/{projectRoot}/package.json"
      ],
      "options": {
        "generator": "@rxap/plugin-library:fix-dependencies",
        "options": {
          "strict": true
        }
      }
    }
  }
}
