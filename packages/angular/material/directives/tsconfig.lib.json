{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": []
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/test-setup.ts",
    "jest.config.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts",
    "button/**/*.ts",
    "card/**/*.ts",
    "expansion/**/*.ts",
    "form-field/**/*.ts",
    "icon/**/*.ts",
    "tabs/**/*.ts"
  ]
}
