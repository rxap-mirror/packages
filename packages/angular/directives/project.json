{
  "name": "angular-directives",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/angular/directives/src",
  "prefix": "rxap",
  "tags": [
    "angular",
    "ngx",
    "packages",
    "directives"
  ],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}"
      ],
      "options": {
        "project": "packages/angular/directives/ng-package.json",
        "tailwindConfig": "packages/angular/directives/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/angular/directives/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/angular/directives/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/angular/directives/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/angular/directives/**/*.ts",
          "packages/angular/directives/**/*.html"
        ]
      }
    },
    "update-dependencies": {
      "executor": "@rxap/plugin-library:update-dependencies"
    },
    "update-package-group": {
      "executor": "@rxap/plugin-library:update-package-group"
    },
    "readme": {
      "executor": "@rxap/plugin-library:readme"
    },
    "fix-dependencies": {
      "executor": "@rxap/plugin-library:run-generator",
      "outputs": [
        "{workspaceRoot}/{projectRoot}/package.json"
      ],
      "options": {
        "generator": "@rxap/plugin-library:fix-dependencies",
        "options": {
          "strict": true
        }
      }
    },
    "check-version": {
      "executor": "@rxap/plugin-library:check-version",
      "options": {
        "packageName": "@angular/core"
      }
    }
  }
}
