{
  "name": "schematic-angular",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/schematic/angular/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/schematic/angular",
        "main": "packages/schematic/angular/src/index.ts",
        "tsConfig": "packages/schematic/angular/tsconfig.lib.json",
        "assets": [
          "packages/schematic/angular/*.md",
          {
            "input": "./packages/schematic/angular/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/schematic/angular/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/schematic/angular",
            "glob": "collection.json",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs schematic-angular {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "options": {
        "lintFilePatterns": [
          "packages/schematic/angular/**/*.ts"
        ]
      }
    },
    "test": {
      "options": {
        "jestConfig": "packages/schematic/angular/jest.config.ts"
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "update-dependencies": {
      "executor": "@rxap/plugin-library:update-dependencies"
    },
    "update-package-group": {
      "executor": "@rxap/plugin-library:update-package-group"
    },
    "readme": {
      "executor": "@rxap/plugin-library:readme"
    },
    "fix-dependencies": {
      "executor": "@rxap/plugin-library:run-generator",
      "outputs": [
        "{workspaceRoot}/{projectRoot}/package.json"
      ],
      "options": {
        "generator": "@rxap/plugin-library:fix-dependencies",
        "options": {
          "strict": true
        }
      }
    }
  },
  "tags": [
    "packages",
    "schematic"
  ]
}
