{
  "$schema": "http://json-schema.org/schema",
  "$id": "data-grid-item",
  "type": "object",
  "properties":{
    "name": {
      "type": "string",
      "description": "The name of the data grid item"
    },
    "header": {
      "type": "string",
      "description": "The name of the control"
    },
    "pipeList": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/pipe"
      }
    },
    "formControl": {
      "$ref": "./form-control.schema.json"
    },
    "template": {
      "type": "string"
    },
    "kind": {
      "type": "string",
      "enum": ["default", "link"],
      "default": "default"
    },
    "type": {
      "$ref": "#/definitions/type"
    },
    "isArray": {
      "type": "boolean"
    }
  },
  "required": ["name"],
  "definitions": {
    "type": {
      "$ref": "./type.schema.json"
    },
    "pipe": {
      "$ref": "./pipe.schema.json"
    }
  }
}
