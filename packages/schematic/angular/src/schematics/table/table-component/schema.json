{
  "$schema": "http://json-schema.org/schema",
  "$id": "template-table-module",
  "allOf": [
    {
      "$ref": "https://unpkg.com/@rxap/schematic-angular@16.1.0-dev.23/src/schematics/angular.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the table",
          "x-prompt": "Which name should the table module have?"
        },
        "tableMethod": {
          "type": "object",
          "properties": {
            "className": {
              "type": "string",
              "description": "The name of the table method class"
            },
            "importPath": {
              "type": "string",
              "description": "The import path for the table method class"
            }
          }
        },
        "openApi": {
          "type": "object",
          "properties": {
            "operationId": {
              "type": "string",
              "description": "The operationId for the open api operation"
            },
            "adapter": {
              "type": "object",
              "properties": {
                "className": {
                  "type": "string",
                  "description": "The name of the open api adapter class"
                },
                "importPath": {
                  "type": "string",
                  "description": "The import path for the open api adapter class"
                }
              },
              "required": [
                "className",
                "importPath"
              ]
            }
          },
          "required": [
            "operationId"
          ]
        },
        "modifiers": {
          "alias": "modifier",
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "navigation-back-header",
              "without-title"
            ]
          },
          "description": "The table modifiers"
        },
        "headerButton": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "properties": {
                "role": {
                  "type": "string",
                  "enum": [
                    "form",
                    "navigation",
                    "method"
                  ]
                },
                "permission": {
                  "type": "string"
                },
                "icon": {
                  "type": "string"
                },
                "svgIcon": {
                  "type": "string"
                },
                "options": {
                  "type": "object",
                  "additionalProperties": true
                }
              },
              "additionalProperties": true
            }
          ],
          "description": "The header button configuration"
        },
        "columnList": {
          "alias": "column",
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  },
                  "role": {
                    "type": "string"
                  },
                  "modifiers": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "template": {
                    "type": "string"
                  },
                  "pipeList": {
                    "type": "array",
                    "items": {
                      "oneOf": [
                        {
                          "type": "string"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string"
                            },
                            "className": {
                              "type": "string"
                            },
                            "importFrom": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "name",
                            "className",
                            "importFrom"
                          ]
                        }
                      ]
                    }
                  },
                  "hasFilter": {
                    "type": "boolean"
                  },
                  "nowrap": {
                    "type": "boolean"
                  },
                  "cssClass": {
                    "type": "string"
                  },
                  "title": {
                    "type": "string"
                  },
                  "propertyPath": {
                    "type": "string"
                  },
                  "hidden": {
                    "type": "boolean"
                  },
                  "active": {
                    "type": "boolean"
                  },
                  "inactive": {
                    "type": "boolean"
                  },
                  "show": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "name"
                ]
              }
            ],
            "description": "table column name"
          },
          "description": "List of table column names"
        },
        "actionList": {
          "alias": "action",
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "refresh": {
                    "type": "boolean"
                  },
                  "confirm": {
                    "type": "boolean"
                  },
                  "tooltip": {
                    "type": "string"
                  },
                  "errorMessage": {
                    "type": "string"
                  },
                  "successMessage": {
                    "type": "string"
                  },
                  "priority": {
                    "type": "number"
                  },
                  "checkFunction": {
                    "type": "string"
                  },
                  "inHeader": {
                    "type": "boolean"
                  },
                  "role": {
                    "type": "string"
                  },
                  "icon": {
                    "type": "string"
                  },
                  "svgIcon": {
                    "type": "string"
                  },
                  "permission": {
                    "type": "string"
                  },
                  "color": {
                    "type": "string",
                    "description": "Value for the color input of the mat-button / mat-icon component"
                  },
                  "cssClass": {
                    "type": "string",
                    "description": "Additional CSS classes added to the button element"
                  },
                  "options": {
                    "type": "object",
                    "additionalProperties": true
                  }
                },
                "required": [
                  "type"
                ]
              }
            ]
          }
        },
        "selectColumn": {
          "type": "boolean",
          "description": "Whether to add a select column to the table"
        }
      },
      "required": [
        "name"
      ]
    }
  ]
}
