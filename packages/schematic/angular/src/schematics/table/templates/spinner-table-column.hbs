{{#> matColumnDef column=column}}
  {{#if table.withHeader}}
  <th mat-header-cell
    *matHeaderCellDef
    {{#if column.sortable}}
    mat-sort-header
    {{/if}}
    {{#if column.headerCssClass}}
    {{> cssClass cssClass=column.headerCssClass}}
    {{/if}}
  ></th>
  {{/if}}
  <td *matCellDef="let element"
    mat-cell
    {{#if column.cssClass}}
    {{> cssClass cssClass=column.cssClass}}
    {{/if}}
  >
    <mat-spinner
      *ngIf="element.__metadata__?.loading$ | async; else noSpinner"
      diameter="15"
    ></mat-spinner>
    <ng-template #noSpinner>
      <div class="w-[15px] h-[15px]"></div>
    </ng-template>
  </td>
{{/matColumnDef}}
