{
  "$schema": "http://json-schema.org/schema",
  "$id": "data-grid-component",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the form definition",
      "x-prompt": "Which name should the form definition have?"
    },
    "project": {
      "type": "string",
      "description": "The target project where the accordion module should be added.",
      "x-prompt": "To which project should the accordion module be added?"
    },
    "directory": {
      "type": "string",
      "description": "Relative path to the directory where the form definition should be created."
    },
    "feature": {
      "type": "string",
      "description": "The feature name where the accordion module should be added.",
      "x-prompt": "To which feature should the accordion module be added?"
    },
    "backend": {
      "type": "string",
      "description": "The backend that should be used to handel data",
      "enum": [
        "none",
        "local",
        "nestjs",
        "open-api"
      ],
      "default": "none"
    },
    "mode": {
      "type": "string",
      "description": "The mode of the form",
      "enum": [
        "form",
        "plain"
      ]
    },
    "collection": {
      "type": "boolean",
      "description": "Whether the data grid is used as collection."
    },
    "nestModule": {
      "type": "string",
      "description": "The name of the nest module where the form definition should be created."
    },
    "overwrite": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Overwrite existing files",
      "default": false
    },
    "title": {
      "type": "string",
      "description": "The title of the data grid card component"
    },
    "subtitle": {
      "type": "string",
      "description": "The subtitle of the data grid card component"
    },
    "itemList": {
      "alias": "item",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the control"
          },
          "type": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "isTypeOnly": {
                    "type": "boolean"
                  },
                  "moduleSpecifier": {
                    "type": "string"
                  },
                  "namedImport": {
                    "type": "string"
                  },
                  "namespaceImport": {
                    "type": "string"
                  },
                  "defaultImport": {
                    "type": "string"
                  }
                },
                "required": [
                  "name"
                ]
              }
            ]
          },
          "isArray": {
            "type": "boolean",
            "description": "Whether the control value is an array",
            "default": false
          },
          "state": {
            "type": "string",
            "description": "The initial state of the control"
          },
          "isRequired": {
            "type": "boolean",
            "description": "Whether the control value is required",
            "default": false
          },
          "isReadonly": {
            "type": "boolean",
            "description": "Whether the control value is readonly",
            "default": false
          },
          "isDisabled": {
            "type": "boolean",
            "description": "Whether the control value is disabled",
            "default": false
          },
          "validatorList": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "template": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the template",
                "enum": [
                  "default",
                  "input",
                  "select"
                ]
              }
            },
            "additionalProperties": true,
            "required": ["name"]
          }
        },
        "required": [
          "name"
        ]
      }
    }
  },
  "required": [
    "project",
    "feature",
    "name"
  ]
}
