{
  "$schema": "http://json-schema.org/schema",
  "$id": "form-component",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of form",
      "x-prompt": "Enter the name of the form?"
    },
    "project": {
      "type": "string",
      "description": "The project where the module should be created",
      "x-prompt": "Enter project name where the module should be created"
    },
    "feature": {
      "type": "string",
      "description": "The feature where the module should be created",
      "x-prompt": "Enter feature name where the module should be created"
    },
    "backend": {
      "type": "string",
      "description": "The backend that should be used to handel data",
      "enum": [
        "none",
        "local",
        "nestjs",
        "open-api"
      ],
      "default": "none"
    },
    "shared": {
      "type": "boolean",
      "description": "Whether the form is shared across applications"
    },
    "window": {
      "type": "boolean",
      "description": "Whether the form can be opened in a window"
    },
    "directory": {
      "type": "string",
      "description": "A path suffix added to the base path"
    },
    "role": {
      "type": "string",
      "description": "Define the role of the form"
    },
    "nestModule": {
      "type": "string",
      "description": "Name of the nest module where the controller is created"
    },
    "controllerName": {
      "type": "string",
      "description": "Name of the nest controller"
    },
    "matFormFieldDefaultOptions": {
      "appearance": {
        "type": "string",
        "description": "The appearance of the mat form field",
        "enum": [
          "legacy",
          "standard",
          "fill",
          "outline"
        ]
      }
    },
    "controlList": {
      "alias": "control",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the control"
          },
          "type": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "isTypeOnly": {
                    "type": "boolean"
                  },
                  "moduleSpecifier": {
                    "type": "string"
                  },
                  "namedImport": {
                    "type": "string"
                  },
                  "namespaceImport": {
                    "type": "string"
                  },
                  "defaultImport": {
                    "type": "string"
                  }
                },
                "required": [
                  "name"
                ]
              }
            ]
          },
          "isArray": {
            "type": "boolean",
            "description": "Whether the control value is an array",
            "default": false
          },
          "state": {
            "type": "string",
            "description": "The initial state of the control"
          },
          "isRequired": {
            "type": "boolean",
            "description": "Whether the control value is required",
            "default": false
          },
          "isReadonly": {
            "type": "boolean",
            "description": "Whether the control value is readonly",
            "default": false
          },
          "isDisabled": {
            "type": "boolean",
            "description": "Whether the control value is disabled",
            "default": false
          },
          "validatorList": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "template": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the template",
                "enum": [
                  "default",
                  "input",
                  "select"
                ]
              }
            },
            "additionalProperties": true,
            "required": ["name"]
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "context": {
      "type": "string",
      "description": "The context use to generate proper names for class, files, etc"
    }
  },
  "required": [
    "name",
    "project",
    "feature"
  ]
}
