{
  "$schema": "http://json-schema.org/schema",
  "$id": "accordion-component-schematic",
  "allOf": [
    {
      "$ref": "../../angular.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "multiple": {
          "type": "boolean",
          "description": "Whether the accordion should allow multiple panels to be expanded at the same time",
          "default": false,
          "alias": "multi"
        },
        "persistent": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "key": {
                  "type": "string"
                }
              },
              "required": ["key"]
            },
            {
              "type": "object",
              "properties": {
                "property": {
                  "$ref": "#/definitions/property"
                }
              },
              "required": ["property"]
            }
          ]
        },
        "identifier": {
          "type": "object",
          "properties": {
            "property": {
              "$ref": "#/definitions/property"
            },
            "source": {
              "type": "string",
              "enum": [
                "route"
              ],
              "default": "route"
            }
          },
          "required": ["property"]
        },
        "header": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                }
              },
              "required": ["title"]
            },
            {
              "type": "object",
              "properties": {
                "property": {
                  "$ref": "#/definitions/property"
                }
              },
              "required": ["property"]
            }
          ]
        },
        "itemList": {
          "alias": "item",
          "type": "array",
          "items": {
            "$ref": "#/definitions/accordionItem"
          },
          "description": "The list of accordion expansion panels"
        }
      }
    }
  ],
  "definitions": {
    "accordionItem": {
      "$ref": "../../accordion-item.schema.json"
    },
    "type": {
      "$ref": "../../type.schema.json"
    },
    "property": {
      "$ref": "../../property.schema.json"
    },
    "button": {
      "$ref": "../../button.schema.json"
    }
  }
}
