{
  "$schema": "http://json-schema.org/schema",
  "$id": "accordion-item-table-component-schematic",
  "allOf": [
    {
      "$ref": "../../../angular.schema.json"
    },
    {
      "$ref": "../../../accordion-item.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "switch": {
          "type": "object",
          "properties": {
            "property": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "type": {
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "isTypeOnly": {
                          "type": "boolean"
                        },
                        "moduleSpecifier": {
                          "type": "string"
                        },
                        "namedImport": {
                          "type": "string"
                        },
                        "namespaceImport": {
                          "type": "string"
                        },
                        "defaultImport": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "name"
                      ]
                    }
                  ]
                }
              },
              "required": [
                "name"
              ]
            },
            "defaultCase": {
              "type": "object",
              "properties": {
                "itemList": {
                  "alias": "item",
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "type": {
                            "type": "string",
                            "enum": [
                              "panel",
                              "table",
                              "data-grid",
                              "data-grid-collection",
                              "tree-table",
                              "switch"
                            ]
                          },
                          "modifiers": {
                            "type": "array",
                            "default": [],
                            "items": {
                              "type": "string"
                            }
                          },
                          "title": {
                            "type": "string"
                          },
                          "description": {
                            "type": "string"
                          }
                        },
                        "additionalProperties": true,
                        "required": ["name"]
                      }
                    ],
                    "description": "The name of the accordion expansion panel"
                  },
                  "description": "The list of accordion expansion panels"
                }
              },
              "required": ["itemList"]
            },
            "case": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "test": {
                    "anyOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "number"
                      },
                      {
                        "type": "boolean"
                      }
                    ]
                  },
                  "itemList": {
                    "alias": "item",
                    "type": "array",
                    "items": {
                      "oneOf": [
                        {
                          "type": "string"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string"
                            },
                            "type": {
                              "type": "string",
                              "enum": [
                                "panel",
                                "table",
                                "data-grid",
                                "data-grid-collection",
                                "tree-table",
                                "switch"
                              ]
                            },
                            "modifiers": {
                              "type": "array",
                              "default": [],
                              "items": {
                                "type": "string"
                              }
                            },
                            "title": {
                              "type": "string"
                            },
                            "description": {
                              "type": "string"
                            }
                          },
                          "additionalProperties": true,
                          "required": ["name"]
                        }
                      ],
                      "description": "The name of the accordion expansion panel"
                    },
                    "description": "The list of accordion expansion panels"
                  }
                },
                "required": ["test", "itemList"]
              }
            }
          },
          "required": ["property", "case"]
        }
      }
    }
  ]
}
