{
  "$schema": "http://json-schema.org/schema",
  "$id": "accordion-item-table-component",
  "type": "object",
  "properties": {
    "itemName": {
      "alias": "name",
      "type": "string",
      "description": "The name of the accordion item",
      "x-prompt": "Which name should the accordion item module have?"
    },
    "project": {
      "type": "string",
      "description": "The target project where the accordion item module should be added.",
      "x-prompt": "To which project should the accordion item module be added?"
    },
    "feature": {
      "type": "string",
      "description": "The feature name where the accordion item module should be added.",
      "x-prompt": "To which feature should the accordion item module be added?"
    },
    "accordionName": {
      "type": "string",
      "description": "The name of the accordion module where the item should be added.",
      "x-prompt": "To which accordion module should the accordion item module be added?"
    },
    "shared": {
      "type": "boolean",
      "default": false,
      "description": "Whether the item is based of a shared component"
    },
    "overwrite": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Overwrite existing files",
      "default": false
    },
    "switch": {
      "type": "object",
      "properties": {
        "property": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string"
            },
            "type": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "isTypeOnly": {
                      "type": "boolean"
                    },
                    "moduleSpecifier": {
                      "type": "string"
                    },
                    "namedImport": {
                      "type": "string"
                    },
                    "namespaceImport": {
                      "type": "string"
                    },
                    "defaultImport": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "name"
                  ]
                }
              ]
            }
          },
          "required": [
            "path"
          ]
        },
        "defaultCase": {
          "type": "object",
          "properties": {
            "itemList": {
              "alias": "item",
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string",
                        "enum": [
                          "panel",
                          "table",
                          "data-grid",
                          "data-grid-collection",
                          "tree-table",
                          "switch"
                        ]
                      },
                      "modifiers": {
                        "type": "array",
                        "default": [],
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "additionalProperties": true,
                    "required": ["name"]
                  }
                ],
                "description": "The name of the accordion expansion panel"
              },
              "description": "The list of accordion expansion panels"
            }
          },
          "required": ["itemList"]
        },
        "case": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "test": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "number"
                  },
                  {
                    "type": "boolean"
                  }
                ]
              },
              "itemList": {
                "alias": "item",
                "type": "array",
                "items": {
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string",
                          "enum": [
                            "panel",
                            "table",
                            "data-grid",
                            "data-grid-collection",
                            "tree-table",
                            "switch"
                          ]
                        },
                        "modifiers": {
                          "type": "array",
                          "default": [],
                          "items": {
                            "type": "string"
                          }
                        }
                      },
                      "additionalProperties": true,
                      "required": ["name"]
                    }
                  ],
                  "description": "The name of the accordion expansion panel"
                },
                "description": "The list of accordion expansion panels"
              }
            },
            "required": ["test", "itemList"]
          }
        }
      },
      "required": ["property", "case"]
    }
  },
  "required": [
    "itemName",
    "project",
    "feature",
    "accordionName"
  ]
}
