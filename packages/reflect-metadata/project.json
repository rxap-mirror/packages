{
  "name": "reflect-metadata",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/reflect-metadata/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/reflect-metadata",
        "main": "packages/reflect-metadata/src/index.ts",
        "tsConfig": "packages/reflect-metadata/tsconfig.lib.json",
        "assets": [
          "packages/reflect-metadata/*.md"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs reflect-metadata {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "options": {
        "lintFilePatterns": [
          "packages/reflect-metadata/**/*.ts"
        ]
      }
    },
    "test": {
      "options": {
        "jestConfig": "packages/reflect-metadata/jest.config.ts"
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "update-dependencies": {
      "executor": "@rxap/plugin-library:update-dependencies"
    },
    "update-package-group": {
      "executor": "@rxap/plugin-library:update-package-group"
    },
    "readme": {
      "executor": "@rxap/plugin-library:readme"
    },
    "fix-dependencies": {
      "executor": "@rxap/plugin-library:run-generator",
      "outputs": [
        "{workspaceRoot}/{projectRoot}/package.json"
      ],
      "options": {
        "generator": "@rxap/plugin-library:fix-dependencies",
        "options": {
          "strict": true
        }
      }
    }
  },
  "tags": [
    "packages"
  ]
}
