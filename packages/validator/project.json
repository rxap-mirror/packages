{
  "name": "validator",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/validator/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/validator",
        "main": "packages/validator/src/index.ts",
        "tsConfig": "packages/validator/tsconfig.lib.json",
        "assets": [
          "packages/validator/*.md"
        ]
      }
    },
    "fix-dependencies": {
      "options": {
        "options": {
          "strict": true
        }
      }
    },
    "lint": {
      "options": {
        "lintFilePatterns": [
          "packages/validator/**/*.ts"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs validator {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    },
    "readme": {},
    "test": {
      "options": {
        "jestConfig": "packages/validator/jest.config.ts"
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "update-dependencies": {},
    "update-package-group": {}
  },
  "tags": [
    "packages",
    "standalone",
    "scope:utilities"
  ]
}
