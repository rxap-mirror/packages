{
  "name": "open-api-service-configuration",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/open-api/service/configuration/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/open-api/service/configuration/**/*.ts",
          "packages/open-api/service/configuration/angular/**/*.ts",
          "packages/open-api/service/configuration/angular/**/*.html",
          "packages/open-api/service/configuration/nest/**/*.ts",
          "packages/open-api/service/configuration/nest/**/*.html"
        ]
      }
    },
    "index-export": {},
    "build": {
      "executor": "@nx/angular:package",
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}"
      ],
      "options": {
        "project": "packages/open-api/service/configuration/ng-package.json",
        "tailwindConfig": "packages/open-api/service/configuration/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/open-api/service/configuration/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/open-api/service/configuration/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/open-api/service/configuration/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "update-dependencies": {
      "executor": "@rxap/plugin-library:update-dependencies"
    },
    "update-package-group": {
      "executor": "@rxap/plugin-library:update-package-group"
    },
    "readme": {
      "executor": "@rxap/plugin-library:readme"
    },
    "fix-dependencies": {
      "executor": "@rxap/plugin-library:run-generator",
      "outputs": [
        "{workspaceRoot}/{projectRoot}/package.json"
      ],
      "options": {
        "generator": "@rxap/plugin-library:fix-dependencies",
        "options": {
          "strict": true
        }
      }
    },
    "check-version": {
      "executor": "@rxap/plugin-library:check-version",
      "options": {
        "packageName": "@angular/core"
      }
    },
    "check-ng-package": {
      "executor": "@rxap/plugin-angular:check-ng-package"
    }
  },
  "tags": [
    "open-api",
    "packages",
    "service",
    "angular",
    "ngx"
  ]
}
