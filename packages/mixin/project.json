{
  "name": "mixin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/mixin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/mixin",
        "main": "packages/mixin/src/index.ts",
        "tsConfig": "packages/mixin/tsconfig.lib.json",
        "assets": [
          "packages/mixin/*.md"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs mixin {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/mixin/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/mixin/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "update-dependencies": {
      "executor": "@rxap/plugin-library:update-dependencies"
    },
    "update-package-group": {
      "executor": "@rxap/plugin-library:update-package-group"
    },
    "readme": {
      "executor": "@rxap/plugin-library:readme"
    },
    "fix-dependencies": {
      "executor": "@rxap/plugin-library:run-generator",
      "outputs": [
        "{workspaceRoot}/{projectRoot}/package.json"
      ],
      "options": {
        "generator": "@rxap/plugin-library:fix-dependencies",
        "options": {
          "strict": true
        }
      }
    }
  },
  "tags": [
    "packages"
  ]
}
