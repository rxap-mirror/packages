{
  "$schema": "http://json-schema.org/schema",
  "version": 2,
  "title": "I18n executor",
  "description": "",
  "type": "object",
  "properties": {
    "availableLanguages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "defaultLanguage": {
      "type": "string"
    },
    "indexHtmlTemplate": {
      "type": "string",
      "default": "i18n.index.html.hbs"
    },
    "buildTarget": {
      "type": "string"
    },
    "assets": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "boolean",
          "default": true
        }
      ]
    }
  },
  "required": []
}
