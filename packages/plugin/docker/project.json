{
  "name": "plugin-docker",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/plugin/docker/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/plugin/docker",
        "main": "packages/plugin/docker/src/index.ts",
        "tsConfig": "packages/plugin/docker/tsconfig.lib.json",
        "assets": [
          "packages/plugin/docker/*.md",
          {
            "input": "./packages/plugin/docker/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/plugin/docker/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/plugin/docker",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/plugin/docker",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs plugin-docker {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/plugin/docker/**/*.ts",
          "packages/plugin/docker/package.json",
          "packages/plugin/docker/generators.json",
          "packages/plugin/docker/executors.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/plugin/docker/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "update-dependencies": {
      "executor": "@rxap/plugin-library:update-dependencies"
    },
    "update-package-group": {
      "executor": "@rxap/plugin-library:update-package-group"
    },
    "readme": {
      "executor": "@rxap/plugin-library:readme"
    },
    "fix-dependencies": {
      "executor": "@rxap/plugin-library:run-generator",
      "outputs": [
        "{workspaceRoot}/{projectRoot}/package.json"
      ],
      "options": {
        "generator": "@rxap/plugin-library:fix-dependencies",
        "options": {
          "strict": true
        }
      }
    }
  },
  "tags": [
    "plugin",
    "nx",
    "nx-plugin",
    "packages",
    "docker"
  ]
}
