{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "target": "ES2022",
    "declaration": true,
    "inlineSources": true,
    "types": [],
    "lib": ["dom", "es2018"],
    "paths": {
      "@rxap/utilities": ["dist/libs/utilities"],
      "@rxap/utilities/reflect-metadata": [
        "dist/libs/utilities/reflect-metadata"
      ]
    },
    "useDefineForClassFields": false
  },
  "exclude": [
    "src/test-setup.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/schematics/**",
    "src/migrations/**"
  ],
  "include": ["**/*.ts"]
}
