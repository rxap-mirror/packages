{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "es2018",
      "dom"
    ],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "rootDir": "schematics",
    "outDir": "../../../dist/libs/schematics/shared/schematics",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@rxap/xml-parser": [
        "../../../dist/libs/xml-parser"
      ],
      "@rxap/xml-parser/elements": [
        "../../../dist/libs/xml-parser/elements"
      ],
      "@rxap/xml-parser/decorators": [
        "../../../dist/libs/xml-parser/decorators"
      ],
      "@rxap/xml-parser/testing": [
        "../../../dist/libs/xml-parser/testing"
      ],
      "@rxap/schematics-utilities": [
        "../../../dist/libs/schematics/utilities"
      ]
    }
  },
  "include": [
    "schematics/**/*"
  ],
  "exclude": [
    "schematics/*/files/**/*"
  ]
}
