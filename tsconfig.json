{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rxap/form-system": [
        "libs/form-system/src/index.ts"
      ],
      "@rxap/utilities": [
        "libs/utilities/src/index.ts"
      ],
      "@rxap/component-system": [
        "libs/component-system/src/index.ts"
      ],
      "@rxap/window-system": [
        "libs/window-system/src/index.ts"
      ],
      "@rxap/loader": [
        "libs/loader/src/index.ts"
      ],
      "@rxap/config": [
        "libs/config/src/index.ts"
      ],
      "@rxap/documents": [
        "libs/documents/src/index.ts"
      ],
      "@rxap/form-controls/date-range-control": [
        "libs/form-controls/date-range-control/src/index.ts"
      ],
      "@rxap/directives/sanitizer": [
        "libs/directives/sanitizer/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
