{
  "root": true,
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nx"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allowCircularSelfDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": [
                  "*"
                ]
              },
              {
                "sourceTag": "schematic",
                "notDependOnLibsWithTags": [
                  "generator"
                ]
              },
              {
                "sourceTag": "generator",
                "notDependOnLibsWithTags": [
                  "schematic"
                ]
              },
              {
                "sourceTag": "browser",
                "notDependOnLibsWithTags": [
                  "node",
                  "angular",
                  "nest"
                ]
              },
              {
                "sourceTag": "workspace",
                "notDependOnLibsWithTags": [
                  "schematic",
                  "generator"
                ]
              },
              {
                "sourceTag": "plugin",
                "notDependOnLibsWithTags": [
                  "schematic"
                ],
                "bannedExternalImports": [
                  "@angular-devkit/architect",
                  "@angular-devkit/core",
                  "@angular-devkit/schematics",
                  "@nrwl/workspace"
                ]
              },
              {
                "allSourceTags": [
                  "nest",
                  "packages"
                ],
                "notDependOnLibsWithTags": [
                  "angular"
                ]
              },
              {
                "allSourceTags": [
                  "angular",
                  "packages"
                ],
                "notDependOnLibsWithTags": [
                  "nest"
                ]
              },
              {
                "allSourceTags": [
                  "angular",
                  "packages",
                  "/^(?!.*\\bmaterial\\b).*$/s"
                ],
                "notDependOnLibsWithTags": [
                  "material"
                ],
                "bannedExternalImports": [
                  "@angular/material"
                ]
              },
              {
                "sourceTag": "angular:standalone",
                "notDependOnLibsWithTags": [
                  "schematic",
                  "generator",
                  "workspace",
                  "angular",
                  "node",
                  "nest",
                  "browser"
                ],
                "onlyDependOnLibsWithTags": [
                  "scope:utilities"
                ]
              },
              {
                "sourceTag": "standalone",
                "notDependOnLibsWithTags": [
                  "schematic",
                  "generator",
                  "workspace",
                  "angular",
                  "node",
                  "nest",
                  "browser"
                ],
                "onlyDependOnLibsWithTags": [
                  "scope:utilities"
                ],
                "bannedExternalImports": [
                  "@angular-devkit/schematics",
                  "@angular/core",
                  "@angular/platform-browser-dynamic"
                ]
              },
              {
                "sourceTag": "scope:core",
                "onlyDependOnLibsWithTags": [
                  "scope:utilities"
                ]
              },
              {
                "sourceTag": "scope:utilities",
                "onlyDependOnLibsWithTags": [
                  "scope:utilities"
                ]
              },
              {
                "sourceTag": "scope:compose",
                "onlyDependOnLibsWithTags": [
                  "scope:utilities",
                  "scope:core",
                  "scope:compose",
                  "scope:integration"
                ]
              },
              {
                "sourceTag": "scope:integration",
                "onlyDependOnLibsWithTags": [
                  "scope:utilities",
                  "scope:core"
                ]
              },
              {
                "sourceTag": "angular",
                "bannedExternalImports": [
                  "xmldom",
                  "@nestjs/common"
                ]
              },
              {
                "sourceTag": "nest",
                "bannedExternalImports": [
                  "@angular/core"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.spec.ts",
        "*.cy.ts",
        "*.stories.ts"
      ],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allowCircularSelfDependency": true,
            "allow": [],
            "depConstraints": []
          }
        ]
      }
    },
    {
      "files": [
        "cypress.config.ts",
        "cypress/**"
      ],
      "rules": {
        "@nx/enforce-module-boundaries": "off"
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "plugin:@nx/typescript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:@nx/javascript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.spec.ts",
        "*.spec.tsx",
        "*.spec.js",
        "*.spec.jsx"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "@typescript-eslint/no-empty-function": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/explicit-function-return-type": "off"
      }
    },
    {
      "files": "*.json",
      "parser": "jsonc-eslint-parser",
      "rules": {}
    }
  ]
}
