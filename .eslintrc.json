{
  "root": true,
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nx"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": [
                  "*"
                ]
              },
              {
                "sourceTag": "schematic",
                "notDependOnLibsWithTags": [
                  "generator"
                ]
              },
              {
                "sourceTag": "generator",
                "notDependOnLibsWithTags": [
                  "schematic"
                ]
              },
              {
                "sourceTag": "browser",
                "notDependOnLibsWithTags": [
                  "node",
                  "angular"
                ]
              },
              {
                "sourceTag": "workspace",
                "notDependOnLibsWithTags": [
                  "schematic",
                  "generator"
                ]
              },
              {
                "sourceTag": "plugin",
                "notDependOnLibsWithTags": [
                  "schematic"
                ]
              },
              {
                "allSourceTags": [
                  "nest",
                  "packages"
                ],
                "notDependOnLibsWithTags": [
                  "angular"
                ]
              },
              {
                "allSourceTags": [
                  "angular",
                  "packages"
                ],
                "notDependOnLibsWithTags": [
                  "nest"
                ]
              },
              {
                "sourceTag": "standalone",
                "notDependOnLibsWithTags": [
                  "schematic",
                  "generator",
                  "workspace",
                  "angular",
                  "node",
                  "nest",
                  "browser"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "plugin:@nx/typescript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:@nx/javascript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.spec.ts",
        "*.spec.tsx",
        "*.spec.js",
        "*.spec.jsx"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "@typescript-eslint/no-empty-function": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/explicit-function-return-type": "off"
      }
    },
    {
      "files": "*.json",
      "parser": "jsonc-eslint-parser",
      "rules": {}
    }
  ]
}
