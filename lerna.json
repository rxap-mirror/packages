{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "allowBranch": [
        "development",
        "latest",
        "next"
      ],
      "ignoreChanges": [
        "**/*.md",
        "**/*.spec.ts",
        "**/*.js",
        "**/*.json",
        "**/*.yaml"
      ]
    }
  }
}
